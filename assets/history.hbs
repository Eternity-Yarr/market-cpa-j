<!DOCTYPE html>
<html lang="en">
	<head>
  {{>head}}
	</head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        {{>navbar}}
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
				<div class="col-sm-3 col-md-2 sidebar">
					<ul class="nav nav-sidebar" id="navigation">
						<li class="text-center">Заказы</li>
						<hr />
						<li><a href="/orders">Все</a></li>
						{{#order_status}}
							<li data-status="{{name}}"><a href="/orders?status={{name}}">{{brief}}</a></li>
						{{/order_status}}
						<hr/>
						<li class="active"><a href="/history">Последние действия</a></li>
					</ul>
				</div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
           <h2>Посдение действия</h2>
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
							<tr>
								<th class="text-left col-md-2">Дата</th>
								<th class="text-left col-md-1">Номер заказа</th>
								<th class="text-center col-md-2">Пользователь</th>
								<th class="text-center col-md-7">Действие</th>
							</tr>
							</thead>
							<tbody>
							{{#each history}}
							<tr>
								<td>{{getTextDate}}</td>
								<td><a href="/order?id={{order_id}}&back_url=%2Fhistory">{{order_id}}</a></td>
								<td><span title="{{user.login}}">{{user.name}} {{user.last_name}}({{user.id}})</span></td>
								<td>{{message}}</td>
							</tr>
							{{/each}}
							</tbody>
						</table>
					</div>
        </div>
      </div>
    </div>
  {{>scripts}}
  </body>
</html>
